Config {
        -- appearance
        font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW C 100 

        --layout
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% } %multicpu% | %memory% | %dynnetwork% { %date% | %uname% | %KPDX% "

        --behavior
        , allDesktops  = True
        , pickBroadest = False
        , overrideRedirect = False

        -- plugins 
        , commands = 
            -- weather 
            [ Run Weather "KPDX" ["--template", "<tempF>F",
                                  "--Low", "35",
                                  "--High", "75",
                                  "--normal", "green",
                                  "--high", "red",
                                  "--low", "lightblue"
                                 ] 36000

            -- network
            , Run DynNetwork ["--template", "<dev>: <tx>kB/s|<rx>Kb/s",
                              "--Low", "1000",
                              "--High", "5000",
                              "--low", "darkgreen",
                              "--normal", "darkorange",
                              "--high", "darkred"
                             ] 10

            -- cpu
            , Run MultiCpu ["--template", "<autototal>", 
                            "--Low", "3",
                            "--High", "50",
                            "--low", "darkgreen",
                            "--normal", "green",
                            "--high", "red"
                           ] 10

            -- memory
            , Run Memory ["--template", "Mem: <usedbar>", 
                          "--Low", "0",
                          "--normal", "green", 
                          "--high", "red"
                         ] 10

            -- kernel 
            , Run Com "uname" ["-s","-r"] "" 36000

            -- time and date
            , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10

            -- stdin
            , Run StdinReader
            ]
        }
